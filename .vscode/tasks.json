{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "g++",
            "type": "shell",
            "windows": {
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Win_Build/engine",
                    "-I", "Dependencies/include/",
                    "-I", "Dependencies/GLEW/include/",
                    "-I", "Dependencies/SDL2/include/"
                ]
            },
            "osx": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "main.cpp",
                    "-o","Builds/Win_Build/engine"
                ]
            },
            "linux": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "main.cpp",
                    "-o","Builds/Win_Build/engine"
                ]
            }
        },
        {
            "label": "File Check",
            "type": "shell",
            "command": "echo ${workspaceRoot}"
        }
    ]
}