{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "g++",
            "type": "shell",
            "windows": {
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Win_Build/engine",
                    "-lmingw32",
                    "-lopengl32",
                    "-lglew32",
                    "-lglew32mx",
                    "-lglu32",
                    "-lSDL2main",
                    "-lSDL2",
                    "-lSDL2_image",
                    "-lSDL2_ttf"
                ]
            },
            "osx": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "main.cpp",
                    "-o","Builds/Win_Build/engine"
                ]
            },
            "linux": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "main.cpp",
                    "-o","Builds/Win_Build/engine"
                ]
            }
        },
        {
            "label": "File Check",
            "type": "shell",
            "command": "echo ${workspaceRoot}"
        }
    ]
}